@keyframes pulsein
	0%, 100%
		top: 0px
		height: 20px
		width: 20px
	50%
		top: -6px
		height: 40px
		width: 35px

@keyframes pulseout
	0%, 100%
		top: 0px
		height: 20px
		width: 20px
	50%
		top: -6px
		height: 40px
		width: 35px

.head
	display: block
	width: 100%
	height: auto
	padding: 13px
	text-align: center
	background #404146
	color: white
	box-sizing: border-box
	margin-bottom: 15px
	&__colors
		display: inline-block
	&__sizes
		display: inline-block
	&__options
		display: inline-block

.color
	display: block
	position: relative
	&__text
		display: inline-block
	&__chooser
		display: inline-block
		position: relative
		width: 20px
		height: 20px
		border: 1px solid white
		border-radius: 100px
		margin: 7px 11px
		outline: none
		transition: all .3s cubic-bezier(0.02, 0.01, 0.47, 1)
		& span
			display: none
			background: rgba(51,51,51,0.75)
			color: white
			padding 4px 8px
			border-radius: 5px
			box-shadow: 0px 0px 4px #222
			width: calc(auto + 10px)
			text-align: center
			z-index: 10
			position: absolute
			transition: 0.25s linear opacity
		&:hover
			cursor: pointer
			outline: none
			z-index: 2
			& span
				display:block
				left: 125%
				top: 125%
				font-size: 15px
		&:focus
			outline: none
			& span
				display: none
		&_default
			background $default
		&_danger
			background $danger
		&_primary
			background $primary
		&_warning
			background $warning
		&_success
			background $success
		&_royal
			background $royal
		&_fashion
			background $fashion
		&_active
			width: 27px
			height: 27px
			border-radius: 50% 50% 4px 50%
			box-shadow: 1px 2px 8px rgba(0,0,0,.35)

.size
	display: block
	position: relative
	&__text
		display: inline-block
	&__chooser
		display: inline-block
		position: relative
		width: 40px
		height: 32px
		border: none
		background transparent
		font-size: 15px
		color: #f1404b
		font-weight: 300
		margin: 7px 15px
		outline: none
		& span
			display: none
			background: rgba(51,51,51,0.75)
			color: #fff
			padding 4px 8px
			border-radius: 5px
			box-shadow: 0px 0px 4px #222
			width: calc(auto + 10px)
			text-align: center
			z-index: 10
			position: absolute
			transition: 0.25s linear opacity
		&:hover
			cursor: pointer
			outline: none
			z-index: 2
			& span
				display:block
				left: 100%
				top: 120%
				font-size: 15px
		&:focus
			outline: none
			& span
				display: none
		&_active
			font-size: 18px
			font-weight: 400
			padding-bottom: 17px
			border-bottom-width: 2px
			border-bottom-style: solid

.option
	display: block
	position: relative
	&__text
		display: inline-block
	&__checkbox
		display: inline-block
		vertical-align: middle
		width: 200px
	&__switcher
		position: relative
		display: block
		padding-left: 50px
		height: 20px
		line-height: 20px
		margin: 5px 5px 5px 15px
		font-size: 18px
		user-select: none
		cursor: pointer
		& input
			display: none
			&:checked + .option__switcher_indicator:after
					background-color: #29ce9a
					transform: translateX(20px)
					animation-name: pulseout
					animation-duration: .3s
			&:checked + .option__switcher_indicator:before
				background-color: #29ce9a
		&_indicator
			&:after
				content: ''
				position: absolute
				top: 0
				left: 0
				height: 20px
				width: 20px
				background-color: #d5d5d5
				border-radius: 50%
				transition: all .3s ease
				animation-name: pulsein
				animation-duration: .3s
			&:before
				content: ''
				position: absolute
				top: 6px
				left: 0
				width: 40px
				height: 8px
				background-color: #d5d5d5
				border-radius: 10px
				transition: all .3s ease

@media screen and (device-width: 320px)
	.size__chooser
		width: auto
		height: auto
		span
			display: none
		&:hover span
			display: none
	.color__chooser:hover span
		display: none
	.head__colors
		margin-bottom: 7px
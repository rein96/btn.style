// ***  Variables ***

$default 	= #d9e1e8
$danger 	= #f1404b
$primary 	= #84B1ED
$warning 	= #f9a11b
$success 	= #28b78d
$royal 		= #9055A2
$fashion	= #ed317f

// ***	Buttons ***

.btn
	margin: 0
	padding: 0
	border-width: 0
	border-color: transparent
	background: transparent
	cursor: pointer
	position: relative

.btn-block
	display block
	width 100%

.btn-no-outline
	outline: none
	&:hover, &:focus, &:active
		outline: none

.btn-sm
	font-size: 13px
	font-weight: 300
	padding: 10px 20px

.btn-md
	font-size: 17px
	font-weight: lighter
	padding: 12px 22px

.btn-lg
	font-size: 21px
	font-weight: 400
	padding: 14px 24px

.btn-danger
	background $danger
	color: $danger
	border: 1px solid $danger
	&:before, &:after
		background $danger
		color: $danger
	&:hover
		background $danger
		color: $danger

.btn-primary
	background $primary
	color: $primary
	border: 1px solid $primary
	&:before, &:after
		background $primary
		color: $primary
	&:hover
		background $primary
		color: $primary

.btn-warning
	background $warning
	color: $warning
	border: 1px solid $warning
	&:before, &:after
		background $warning
		color: $warning
	&:hover
		background $warning
		color: $warning

.btn-success
	background $success
	color: $success
	border: 1px solid $success
	&:before, &:after
		background $success
		color: $success
	&:hover
		background $success
		color: $success

.btn-royal
	background $royal
	color: $royal
	border: 1px solid $royal
	&:before, &:after
		background $royal
		color: $royal
	&:hover
		background $royal
		color: $royal

.btn-fashion
	background $fashion
	color: $fashion
	border: 1px solid $fashion
	&:before, &:after
		background $fashion
		color: $fashion
	&:hover
		background $fashion
		color: $fashion

.btn-float
	border-radius: 3px
	color: white
	border: none
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover, &:focus
		color: white
		transform: translateY(-7px)
		box-shadow: 5px 7px 10px rgba(0,0,0,.37)

.btn-stretch
	position: relative
	background transparent
	overflow hidden
	border: none
	&:before, &:after
		content: ''
		position: absolute
		left: 0
		width: 100%
		height: 1px
		transform scaleX(0)
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		bottom: 0
	&:after
		top: 1px
	&:hover, &:focus
		background: transparent
		letter-spacing: 2px
		transition all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
		&:after
			transform scaleX(1)
		&:before
			transform scaleX(1)

.btn-tight
	position: relative
	background transparent
	overflow hidden
	border: none
	letter-spacing: 1px
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before, &:after
		content: ''
		position: absolute
		left: 0
		width: 100%
		height: 1px
		transform scaleX(1)
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		bottom: 0
	&:after
		top: 0
	&:hover, &:focus
		background: transparent
		letter-spacing: 3px
		border-bottom: 1px solid rgba(58,51,53,0.3)
		border-top: 1px solid rgba(58,51,53,0.3)
		&:after
			transform scaleX(0)
		&:before
			transform scaleX(0)

.btn-slice1
	position: relative
	color: white
	overflow hidden
	border: none
	&:after
		content: ''
		position: absolute
		height: 0%
		width: 0%
		left: 50%
		top: 40%
		opacity: .15
		background white
		transform: translateX(-50%) translateY(-50%) rotate(-45deg)
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover, &:focus
		color: white
		&:after
			height: 450%
			width: 100%
			transform: scale(2.5, 2.5)
			opacity: .055

.btn-slice2
	position: relative
	color: white
	overflow hidden
	border: none
	&:after
		content: ''
		display: block
		position: absolute
		height: 36%
		width: 14%
		left: 50%
		top: 50%
		background transparent
		border-radius: 100%
		transform: translateX(-50%) translateY(-50%)
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover, &:focus
		color: white
		&:after
			height: 250%
			width: 200%
			background white
			opacity: .055

.btn-slice3
	position: relative
	color: white
	overflow hidden
	border: none
	&:before, &:after
		content: ''
		display: block
		position: absolute
		height: 0%
		width: 100%
		opacity: .75
		left: 50%
		background white
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		top: 0
		transform: translateX(-50%) translateY(-0%)
	&:after
		bottom: 0
		transform: translateX(-50%) translateY(0%)
	&:hover, &:focus
		color: white
		&:after, &:before
			height: 50%
			width: 110%
			opacity: .1

.btn-round
	position: relative
	background transparent
	overflow hidden
	border-width: 2px
	border-radius: 100px
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		content: ''
		display: block
		position: absolute
		top: 0px
		left: 0px
		width: calc(100% - 4px)
		height: calc(100% - 4px)
		border: solid 2px white
		border-radius: 100px
		opacity: 0
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover, &:focus
		color: white
		z-index 2
		&:before
			z-index -1
			opacity: 1

.btn-fill
	position: relative
	background transparent
	overflow hidden
	border-width: 2px
	border-radius: 100px
	z-index: 0
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before, &:after
		content: ''
		position: absolute
		width: 100%
		height: 120%
		top: 0
		left: 0
		z-index: -1
		opacity: 0
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		transform: translate3d(-110%, -10%, 0) skewX(-20deg)
	&:after
		transform: translate3d(110%, -10%, 0) skewX(-20deg)
	&:hover, &:focus
		color: white
		background: transparent
		box-shadow: 0 1px 8px rgba(58,51,53,0.3)
		&:before
			opacity: .85
			transform: translate3d(-49%, -10%, 0) skewX(-20deg)
		&:after
			opacity: .75
			transform: translate3d(50%, -10%, 0) skewX(-20deg)

.btn-arial
	position: relative
	color: white
	overflow hidden
	border: none
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before, &:after
		content: ''
		position: absolute
		border-radius: 100px
		background white
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		width: 100px
		height: 100px
		top: -100px
		right: -100px
		opacity: .25
		z-index: 1
	&:after
		width: 75px
		height: 75px
		top: calc(-100px + 12.5px)
		right: calc(-100px + 12.5px)
		opacity: .35
		z-index: 2
	&:hover, &:focus
		color: white
		transform: scale(1.1)
		box-shadow: 0 1px 8px rgba(58,51,53,0.3)
		&:before, &:after
			transform: translate(-70px, 55px)

.btn-menu
	position: relative
	color: white
	overflow hidden
	border: none
	padding 0
	border-radius: 50px
	margin: 0 auto
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover, &:focus
		color: white
		box-shadow: 0 3px 10px rgba(58,51,53,0.75)
	&.btn-lg
		width: 54px
		height: 54px
	&.btn-md
		width: 44px
		height: 44px
	&.btn-sm
		width: 36px
		height: 36px

.btn-icon
	position: relative
	overflow hidden
	border: none
	color: white
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before, &:after
		position: absolute
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:before
		content: '\27A3'
		right: -15px
		top: 22%
		background transparent
	&:after
		content: ''
		height: 100%
		width: 7px
		left: -8px
		top: 0
		border-radius: 0 5px 0px 0
		background: white
		opacity: 0.55
	&:hover, &:focus
		color: white
		padding-right: 25px
		&:before
			right: 3px
			color: white
		&:after
			left: 0px

.btn-flash
	position: relative
	overflow hidden
	border: none
	color: white
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:after, &:before
		content: ''
		position: absolute
		width: 0
		height: 3px
		left: 50%
		right: 0
		left: auto
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:after
		bottom: 3px
	&:before
		top: 3px
	&:hover, &:focus
		background transparent
		&:after, &:before
			width: 100%
			left: 0


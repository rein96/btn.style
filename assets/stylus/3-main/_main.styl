.wrapper
	display: block
	position: relative
	margin: 0 auto
	width: 100%
	background #e4e7ec
	&__main
		padding: 0 10px
		min-width: 320px
		max-width: 1024px
		margin: 0 auto

.card
	position: relative
	display: inline-block
	width: 300px
	height: 260px
	border-radius: 5px
	margin: 13px
	background white
	border: 1px solid rgba(255,255,255,.85)
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&:hover
		transform: translate(5px, -7px)
		box-shadow: 5px 7px 10px rgba(0,0,0,.35)
		& .card__copy_cloud
			display: block
	&__title
		font-size: 23px
		padding: 15px 10px
		color: $danger
	&__btn
		text-align: center
		margin: 20px auto
		height: 50px
	&__desc
		background: #fafafa
		font-size: 15px
		margin: 15px 7px
		padding: 5px 7px
	&__copy
		position: relative
		display: block
		text-align: right
		padding: 0 10px
		transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
		&_cloud
			display: none
			position: absolute
			right: 10px
			width: 30px
			height: 30px
			border-radius: 100px
			color: #f1404b
			&:hover
				opacity: 0.85

.copyMsg
	display: block
	position: fixed
	width: 97px
	background: #404146
	border-radius: 25px 25px 0 25px
	text-align: center
	color: white
	padding: 7px 10px
	right: -150px
	top: calc(50vh - 27px)
	opacity: 0
	transition: all .5s cubic-bezier(0.02, 0.01, 0.47, 1)
	&_active
		transform: translateX(-150px)
		opacity: 1

.title__hr
	border-style: dashed
	position: relative
	border-color: #7E7E7E
	margin: 15px auto
	width: 90%
	&:after
		content: '8'
		position: absolute
		transform: rotate(90deg)
		top: -15px
		left: 50%
		background white

@media screen and (device-width: 320px)
	.wrapper
		width: 105%
		&__main
			padding: 0
	.card
		margin: 8px
		&__copy_cloud
			display: none

@media screen and (max-device-width: 360px)
	.color__text
		display: block
	.card
		&:hover
			transform: none
			box-shadow: none

@media screen and (min-device-width: 1030px)
	.wrapper__main
		text-align: center
	.card
		&__title, &__desc
			text-align: left